---
#
# aasf-infra-auto/roles/remote-deploy/defaults/main.yml
#

rem_home_dir: /opt/aasf
rem_user_grp: aasfgrp
rem_connector_usr: aasf-connector
rem_connector_loc: "{{ rem_home_dir }}/{{ rem_connector_usr }}"
rem_controlproxy_usr: aasf-controlproxy
rem_controlproxy_loc: "{{ rem_home_dir }}/{{ rem_controlproxy_usr }}"
rem_health_usr: aasf-health
rem_health_loc: "{{ rem_home_dir }}/{{ rem_health_usr }}"
rem_csfms_usr: csfms
rem_csfms_loc: "{{ rem_home_dir }}/{{ rem_csfms_usr }}"

rem_destroy_artifact_pkgs: no
rem_push_from_deploy_host: yes
rem_deploy_mode: install

rem_tarball_loc: https://cisco.box.com/s/5ciydz60pmyekv5n01l912vcsfygarjq
rem_tarball_dst: aasf.tar
rem_tarball_dir: aasf

AASF_CONNECTOR_CONTROL_HOST: controlhost.domain.com
AASF_CONNECTOR_CONTROL_PORT: 63456
AASF_CONNECTOR_DATA_HOST: datahost.domain.com
AASF_CONNECTOR_DATA_PORT: 63457
