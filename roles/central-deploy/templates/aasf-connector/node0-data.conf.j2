
########################################################################################################
## csf.connector.properties
########################################################################################################

## -----------------------------------------------------------------------------------------------------
## server properties
## -----------------------------------------------------------------------------------------------------

## Server
server.node.id={{ cen_node0_data_server_node_id }}
server.conn.type={{ cen_node0_data_server_conn_type }}

## Metrics
metrics.delay.seconds={{ cen_node0_data_metrics_delay_seconds }}

## TLS
server.jks.file={{ cen_node0_data_server_jks_file }}
server.jks.pass={{ cen_node0_data_server_jks_pass }}

## Ports used by Jetty
jetty.https.port={{ cen_node0_data_jetty_https_port }}
jetty.http.port={{ cen_node0_data_jetty_http_port }}
jetty.http.ip={{ cen_node0_data_jetty_http_ip }}

## Server Topics
server.out.topic.prefix={{ cen_node0_data_server_out_topic_prefix }}
server.in.topic.prefix={{ cen_node0_data_server_in_topic_prefix }}
server.file.in.topic.prefix={{ cen_node0_data_server_file_in_topic_prefix }}
