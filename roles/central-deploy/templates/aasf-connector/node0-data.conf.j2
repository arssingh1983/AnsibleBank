## File Storage
server.file.storage.location={{ cen_node0_data_server_file_storage_location }}

## Kafka
server.kafka.group.id={{ cen_node0_data_server_kafka_group_id }}

#######################################################################################################
## postgres.properties
#######################################################################################################
rdbms.url={{ cen_node0_data_rdbms_url }}
rdbms.username={{ cen_node0_data_rdbms_username }}
rdbms.password={{ cen_node0_data_rdbms_password }}
rdbms.driver={{ cen_node0_data_rdbms_driver }}
rdbms.validation.query={{ cen_node0_data_rdbms_validation_query }}

########################################################################################################
